<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddBookActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/book_image_src"
                android:padding="15dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

            <Button
                android:id="@+id/add_book_image"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:text="Add Book Image"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/corner_round_background"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/book_name"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:hint="Book Name"
                android:textColorHint="@color/colorTextSecondary"
                android:background="@drawable/corner_round_background"
                android:textColor="@color/colorTextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/book_type"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:textColorHint="@color/colorTextSecondary"
                android:background="@drawable/corner_round_background"
                android:textColor="@color/colorTextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/writer_name"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:hint="Writer Name"
                android:textColorHint="@color/colorTextSecondary"
                android:background="@drawable/corner_round_background"
                android:textColor="@color/colorTextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/history"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:hint="History"
                android:textColorHint="@color/colorTextSecondary"
                android:background="@drawable/corner_round_background"
                android:textColor="@color/colorTextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/year"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:hint="Produce Year"
                android:textColorHint="@color/colorTextSecondary"
                android:background="@drawable/corner_round_background"
                android:textColor="@color/colorTextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/url"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:hint="Book Url"
                android:textColorHint="@color/colorTextSecondary"
                android:background="@drawable/corner_round_background"
                android:textColor="@color/colorTextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/direct_url"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:hint="Direct Url"
                android:textColorHint="@color/colorTextSecondary"
                android:background="@drawable/corner_round_background"
                android:textColor="@color/colorTextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/book_testing"
                android:textColor="@color/colorTextPrimary"
                android:text="Testing"
                android:backgroundTint="#ECA977"
                android:background="@drawable/corner_round_background"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/add_book"
                android:textColor="@color/colorWhite"
                android:text="Add Book"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/corner_round_background"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>